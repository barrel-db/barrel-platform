%% -*- erlang -*-
{erl_opts, [debug_info,
            {lager_extra_sinks, [access]}
           ]}.

{overrides, [{override, barrel_store,
               [{deps, [{lager, "3.2.1"},
                       {uuid, {pkg, uuid_erl}},
                       {rocksdb, "0.6.2"},
                       {lru, "2.3.1"},
                       {sext, "1.4.0"}]}]},
             {override, barrel_http,
              [{deps, [{cowboy, {git, "https://github.com/ninenines/cowboy.git", {tag, "2.0.0-pre.7"}}},
                       {hackney, "1.6.5"}]}]},
             {override, barrel_replicate,
              [{deps, []}]},
             {override, barrel_peer,
              [{deps, []}]}
            ]
}.

{relx, [
  {release, {'barrel', "0.8.1"}, [barrel_store, barrel_http]},
  {sys_config, "config/test.config"},
  {dev_mode, true},
  {include_erts, false},
  {include_src, false},
  {extended_start_script, true}
]}.

{profiles,
 [{prod,
   [{relx,
     [{sys_config, "./config/test.config"},
      {dev_mode, false},
      {include_erts, true},
      {extended_start_script, true},
      {include_src, false},
      {extended_start_script, true}
     ]}
   ]}
 ]}.
