%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et
%
{erl_opts, [debug_info]}.

{deps, [
    {hooks, "1.1.1"},
    {jiffy, "0.14.5", {pkg, barrel_jiffy}},
    {snappy, "1.1.1"},
    {lager, "3.0.1"},
    {ucol, "2.0.0"},
    {gproc, "0.5.0"},
    {mochiweb, "2.12.2"},
    {oauth, "1.6.0", {pkg, barrel_oauth}},
    {ibrowse, "4.2.0", {pkg, barrel_ibrowse}},
    {hackney, "1.5.7"},
    {jsx, "2.8.0"},
    {hooks, "1.1.1"},
    {econfig, "0.7.1"},

    %% exometer code
    {exometer_core, {git, "https://github.com/barrel-db/exometer_core.git",
                     {ref, "483f1f9be1bd064903d85a550b1c54b13c247104"}}}
]}.


{pre_hooks, [{"(linux|darwin|solaris)", compile, "make -C c_src/barrel_js"},
             {"(freebsd|netbsd|openbsd)", compile, "gmake -C c_src/barrel_js"}]}.

{post_hooks, [{"(linux|darwin|solaris)", clean, "make -C c_src/barrel_js clean"},
              {"(freebsd|netbsd|openbsd)", compile, "gmake -C c_src/barrel_js clean"},
              {compile, "escript support/build_js.escript"}]}.

{relx, [
        {release, {'barrel', "0.1.0"},
         [lager,
          sasl,
          asn1,
          public_key,
          ssl,
          crypto,
          os_mon,
          inets,
          runtime_tools,
          mochiweb,
          ibrowse,
          hackney,
          econfig,
          hooks,
          jsx,
           exometer_core,
          barrel]},

        {sys_config, ""},

        {vm_args, ""},

        {dev_mode, true},
        {include_erts, false},
        {extended_start_script, true},

        {overlay_vars, "config/vars.config"},

        {overlay, [
                   {mkdir, "log"},
                   {mkdir, "run"},
                   {mkdir, "data"},

                   %% keep empty files
                   {copy, "config/empty", "log/KEEP"},
                   {copy, "config/empty", "data/KEEP"},


                   %% config files
                   {template, "config/sys.config", "releases/{{rel_vsn}}//sys.config"},
                   {template, "config/vm.args", "releases/{{rel_vsn}}/vm.args"},
                   {template, "config/barrel.ini", "etc/barrel.ini"},
                   {template, "config/local.ini", "etc/local.ini"}

                  ]}
       ]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
