%% -*- erlang -*-
[

  {barrel_http, [
    {listen_port, 7080},
    {access_log, true}
  ]},

  {barrel_store, [
    {data_dir, "data"},
    {in_memory, false},

    {dbs, [
      #{<<"database_id">> => <<"testdb">>},
      #{<<"database_id">> => <<"source">>}
    ]},

    {statsd_server, {{127,0,0,1}, 8888}}
    %% {statsd_server, {"localhost", 8888}}

  ]},

  {lager, [
    {log_root, "log"},
    {extra_sinks, [
      {access_lager_event,
       [{handlers,
         [{lager_file_backend,
           [{file, "access.log"},
            {level, info},
            {formatter, lager_default_formatter},
            {formatter_config, [date, " ", time," [",severity,"] ", message, "\n"]} 
           ]
          }]
        }
       ]
      }]
    }
  ]},

  {sasl, [
    {sasl_error_logger, false}
  ]}
].
