{dev_mode, true}.
{include_erts, false}.
{extended_start_script, true}.
{overlay_vars, "../../config/vars.config"}.
{overlay, [
           {mkdir, "log"},
           {mkdir, "run"},
           {mkdir, "data"},

           %% keep empty files
           {copy, "../../config/empty", "log/KEEP"},
           {copy, "../../config/empty", "data/KEEP"},

           %% config files
           {template, "../../config/barrel.yml", "etc/barrel.yml"},
            {template, "../../config/vm.args", "etc/vm.args"},
            {template, "../../config/sys.config", "etc/sys.config"}

          ]
}.
